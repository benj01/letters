{
    "compilerOptions": {
        "target": "ES2016",
        "module": "CommonJS",
        "outDir": "./dist/scripts",
        "rootDir": "./scripts",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    },
    "include": ["scripts/**/*"]
} 